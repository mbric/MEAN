extends layouts/layout

block head
    != css('single-form')


block content
    form(method="POST").form-single
        h2.form-single-heading Reset Password
        input(name="resetKey", type="hidden", value="#{hash}")
        input(name="email", type="text", placeholder="Email Address").form-control
        input(name="password", type="password", placeholder="Password").form-control
        input(type="submit", value="Reset Password").btn.btn-primary.btn-lg.btn-block